#!/usr/bin/env bash

dir=$(cd -P -- "$(dirname -- "$0")" && pwd -P)
cd $dir

source bin/configure_args.sh

print_help() {
	cat configure_help.txt
}

verbose_print() {
	TXT="$1"
	if [[ $VERBOSE -gt 0 ]]; then
		echo "$TXT"
	fi
}

POSITIONAL=()
VERBOSE=0
ALL=1
INCLUDE=()
EXCLUDE=()
DIR="$HOME"
BACKUP="$HOME/.vim_old"
PROMPT=-1

if [[ $# -eq 0 ]]; then
	print_help
	exit 0
fi
get_args $@
verbose_print "$(print_args)"
